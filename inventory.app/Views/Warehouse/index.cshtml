@{
    ViewData["Title"] = "Warehouse Page";
}

@model IEnumerable<WarehouseViewModel>  
@using inventory.core.Models  

<div class="text-center">
    <h1 class="display-4">Warehouse</h1>
    <p><a href="">building a basic Warehouse Mangement System with ASP.NET Core</a>.</p>
</div>

<div class="container-fluid">

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#warehouseModal">
  Add Warehouse
</button>
<br/><br/>
   <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Product Category</th>
      <th scope="col">Product Name</th>
      <th scope="col">Product Cost</th>
      <th scope="col">Supplier Name</th>
      <th scope="col">Product Quantity</th>
      <th scope="col">Product Shelf Number</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
       @foreach (var item in Model){
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductCategory)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                <td>@Html.DisplayFor(modelItem => item.PurchaseCost)</td>
                <td>@Html.DisplayFor(modelItem => item.Supplier)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductQuantity)</td>
                <td>@Html.DisplayFor(modelItem => item.ShelfNumber)</td>
                <td>  
                    <a id="editWarehouseModal" data-toggle="modal" asp-action="EditWarehouse" asp-route-id="@item.Id" data-target="#modal-action-user"  
                        class="btn btn-info">  
                        <i class="glyphicon glyphicon-pencil"></i>  Edit  
                    </a>                           
                    <a id="deleteWarehouseModal" data-toggle="modal" asp-action="DeleteWarehouse" asp-route-id="@item.Id" data-target="#modal-action-user" class="btn btn-danger">  
                        <i class="glyphicon glyphicon-trash"></i>  Delete  
                    </a>  
                </td>
            </tr>
       }
    
  </tbody>
       @foreach (var item in Model){
            <tr>
                <th scope="row">3</th>
                <td></td>
                <td></td>
                <td></td>
                <td>  
                    <a id="editWarehouseModal" data-toggle="modal" asp-action="EditWarehouse" asp-route-id="@item.Id" data-target="#modal-action-user"  
                        class="btn btn-info">  
                        <i class="glyphicon glyphicon-pencil"></i>  Edit  
                    </a>                           
                    <a id="deleteWarehouseModal" data-toggle="modal" asp-action="DeleteWarehouse" asp-route-id="@item.Id" data-target="#modal-action-user" class="btn btn-danger">  
                        <i class="glyphicon glyphicon-trash"></i>  Delete  
                    </a>  
                </td>
            </tr>
       }
    
  </tbody>
</table>
</div>

<!-- Modal -->
<div class="modal fade" id="warehouseModal" tabindex="-1" role="dialog" aria-labelledby="warehouseModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="warehouseModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

